{
    "manifest_version": 3,
    "name": "Bilibili Gift Logger",
    "short_name": "B23 SC Logger",
    "version": "1.0.0",
    "description": "Gift/Superchat/Membership log viewer for bilibili live",
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "*://*.bilibili.com/"
    ],
    "icons": {
        "16": "icons/icon@1x.png",
        "48": "icons/icon@3x.png",
        "128": "icons/icon@8x.png"
    },
    "action": {
        "default_icon": {
            "19": "icons/browser@1x.png",
            "38": "icons/browser@2x.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    }
}